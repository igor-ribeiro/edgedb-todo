{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": false,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "~/db/*": ["./dbschema/*"]
    },
    "noEmit": true
  }
}
